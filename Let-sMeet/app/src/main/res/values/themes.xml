    <style name="Theme.LetsMeet.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.LetsMeet.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="buttonStyleDetails" parent="Base.Widget.AppCompat.Button">
        <item name="android:padding">@dimen/fab_margin</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>

        <item name="android:textSize">15sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/black</item>

        <item name="android:background">@color/yellow_light</item>
        <item name="android:strokeColor">@color/yellow</item>
        <item name="strokeWidth">5sp</item>


