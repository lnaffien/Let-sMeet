<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_temp_actuelle_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Température actuelle : "
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_temp_actuelle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XX"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/txt_temp_actuelle_description"
        app:layout_constraintStart_toStartOf="@+id/txt_temp_actuelle_description"
        app:layout_constraintTop_toBottomOf="@+id/txt_temp_actuelle_description" />

    <TextView
        android:id="@+id/txt_temp_actuelle_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="°C"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/txt_temp_actuelle"
        app:layout_constraintTop_toTopOf="@+id/txt_temp_actuelle" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_baseline_device_thermostat_24" />

</androidx.constraintlayout.widget.ConstraintLayout>